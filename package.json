{
  "name": "sextant-api",
  "private": true,
  "version": "1.0.0",
  "description": "api server for the sextant cluster creation service",
  "main": "index.js",
  "scripts": {
    "migrate": "knex migrate:latest",
    "build": "tsc -p tsconfig.json",
    "watch": "tsc -w -p tsconfig.json",
    "check": "npm-check",
    "download-helm-charts": "ts-node -P tsconfig.json src/download-helm-charts.js",
    "copy-helm-fixtures": "tar -xf ./test/fixtures/helmCharts.tar.gz -C .",
    "remove-helm-fixtures": "rm -rf ./helmCharts/*",
    "preserve": "npm run download-helm-charts && npm run migrate",
    "serve": "ts-node -P tsconfig.json src/index.js",
    "generate-swagger": "ts-node -P tsconfig.json src/generateSwagger.js",
    "pretest": "npm run copy-helm-fixtures",
    "test": "npm run cover:test; npm run cover:report; npm run test:report",
    "posttest": "npm run remove-helm-fixtures",
    "test:tape": "ts-node -P tsconfig.json node_modules/tape/bin/tape test/*.test.js test/**/*.test.js > /tmp/test.out",
    "test:report": "cat /tmp/test.out | tap-spec && cat /tmp/test.out | tap-junit > /tmp/junit.xml",
    "cover:test": "nyc --silent npm run test:tape",
    "cover:report": "nyc report --report-dir /tmp --reporter=text --reporter=lcov",
    "start": "npm run download-helm-charts && npm run serve"
  },
  "dependencies": {
    "@aws-sdk/client-marketplace-metering": "^3.43.0",
    "@kubernetes/client-node": "^0.15.1",
    "axios": "^0.24.0",
    "bcrypt": "^5.0.1",
    "bluebird": "^3.7.2",
    "body-parser": "^1.19.0",
    "child-process-promise": "^2.2.1",
    "config": "^3.3.6",
    "connect-pg-simple": "^6.2.1",
    "cookie-parser": "^1.4.5",
    "deepmerge": "^4.2.2",
    "dotenv": "^10.0.0",
    "dotty": "^0.1.1",
    "express": "^4.17.1",
    "express-async-handler": "^1.1.4",
    "express-session": "^1.17.2",
    "fs-extra": "^10.0.0",
    "get-port": "^5.1.1",
    "js-yaml": "^3.14.1",
    "jsonwebtoken": "^8.5.1",
    "knex": "^1.0.3",
    "memoizee": "^0.4.15",
    "minimist": "^1.2.6",
    "node-schedule": "^2.0.0",
    "openapi-types": "^9.3.0",
    "passport": "^0.4.1",
    "pg": "8.7.1",
    "pino": "^4.17.6",
    "promise-fs": "^2.1.1",
    "randomstring": "^1.2.1",
    "request": "^2.88.2",
    "sawtooth-sdk": "git+https://github.com/hyperledger/sawtooth-sdk-javascript.git#5cdf299ce466",
    "swagger-jsdoc": "^5.0.1",
    "swagger-ui-express": "^4.1.6",
    "tmp-promise": "^3.0.3",
    "uuid": "8.3.2",
    "yup": "^0.32.11"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/bluebird": "^3.5.36",
    "@types/child-process-promise": "^2.2.2",
    "@types/config": "^3.3.0",
    "@types/connect-pg-simple": "^7.0.0",
    "@types/express-session": "^1.17.5",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/memoizee": "^0.4.8",
    "@types/node": "^18.7.6",
    "@types/node-schedule": "^2.1.0",
    "@types/randomstring": "^1.1.8",
    "@types/tape": "^4.13.2",
    "@types/tmp": "^0.2.3",
    "@typescript-eslint/eslint-plugin": "^5.33.1",
    "@typescript-eslint/parser": "^5.33.1",
    "async": "^3.2.2",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.4.0",
    "eslint-import-resolver-typescript": "^3.4.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.0.0",
    "npm-check": "^6.0.1",
    "nyc": "^15.1.0",
    "prettier": "2.5.1",
    "tap-junit": "^5.0.2",
    "tap-spec": "^5.0.0",
    "tape": "^4.16.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4",
    "widdershins": "^4.0.1"
  }
}
