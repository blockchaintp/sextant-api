{
  "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"],
  "reporters": ["default", ["jest-junit", { "suiteName": "Jest-Junit", "outputFile": "build/jest/junit.xml" }]],
  "testEnvironment": "node",
  "testRegex": "/jest/.*\\.(test|spec)?\\.(js|jsx|ts|tsx)$",
  "transform": { "^.+\\.ts?$": "ts-jest" }
}
